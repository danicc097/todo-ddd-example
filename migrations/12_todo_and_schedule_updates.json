    {
      "create_table": {
        "name": "todo_focus_sessions",
        "columns": [
          {
            "name": "id",
            "type": "uuid",
            "pk": true
          },
          {
            "name": "todo_id",
            "type": "uuid",
            "references": {
              "name": "fk_todo_focus_sessions_todo_id",
              "table": "todos",
              "column": "id",
              "on_delete": "CASCADE"
            }
          },
          {
            "name": "user_id",
            "type": "uuid",
            "references": {
              "name": "fk_todo_focus_sessions_user_id",
              "table": "users",
              "column": "id",
              "on_delete": "CASCADE"
            },
            "nullable": true
          },
          {
            "name": "start_time",
            "type": "timestamptz",
            "nullable": false
          },
          {
            "name": "end_time",
            "type": "timestamptz",
            "nullable": true
          }
        ]
      }
    },
    {
      "create_index": {
        "name": "one_active_session_per_todo",
        "table": "todo_focus_sessions",
        "columns": [
          {
            "column": "todo_id"
          }
        ],
        "unique": true,
        "predicate": "end_time IS NULL"
      }
    },
    {
      "create_table": {
        "name": "daily_schedules",
        "columns": [
          {
            "name": "user_id",
