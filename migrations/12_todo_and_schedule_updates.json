            "references": {
              "name": "fk_daily_schedules_user_id",
              "table": "users",
              "column": "id",
              "on_delete": "CASCADE"
            }
          },
          {
            "name": "date",
            "type": "timestamptz"
          },
          {
            "name": "max_capacity",
            "type": "integer",
            "nullable": false
          },
          {
            "name": "version",
            "type": "integer",
            "nullable": false,
            "default": "1"
          }
        ],
        "constraints": [
          {
            "name": "daily_schedules_pkey",
            "type": "primary_key",
            "columns": [
              "user_id",
              "date"
            ]
          }
        ]
      }
    },
    {
      "create_table": {
        "name": "schedule_tasks",
        "columns": [
          {
            "name": "user_id",
            "type": "uuid"
          },
          {
            "name": "date",
            "type": "timestamptz"
          },
          {
            "name": "todo_id",
            "type": "uuid"
          },
          {
            "name": "energy_cost",
            "type": "integer",
            "nullable": false
          }
        ],
        "constraints": [
          {
            "name": "schedule_tasks_pkey",
            "type": "primary_key",
            "columns": [
              "user_id",
              "date",
              "todo_id"
            ]
          },
          {
            "name": "fk_schedule_tasks_schedule",
            "type": "foreign_key",
            "columns": [
              "user_id",
              "date"
            ],
            "references": {
              "table": "daily_schedules",
              "columns": [
                "user_id",
                "date"
              ],
              "on_delete": "CASCADE"
            }
          }
        ]
      }
    },
    {
      "create_table": {
        "name": "todo_completion_logs",
        "columns": [
          {
            "name": "id",
