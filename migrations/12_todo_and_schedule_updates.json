            "references": {
              "name": "fk_todo_completion_logs_todo_id",
              "table": "todos",
              "column": "id",
              "on_delete": "CASCADE"
            }
          },
          {
            "name": "actor_id",
            "type": "uuid",
            "references": {
              "name": "fk_todo_completion_logs_actor_id",
              "table": "users",
              "column": "id",
              "on_delete": "SET NULL"
            }
          },
          {
            "name": "occurred_at",
            "type": "timestamptz",
            "nullable": false,
            "default": "now()"
          }
        ]
      }
    }
